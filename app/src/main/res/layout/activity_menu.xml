<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/png2"
    tools:context=".MenuActivity">


    <!-- ExpandableListView para hamburguesas, bebidas y postres -->
    <!-- Ajusta este porcentaje según tus necesidades -->

    <!-- Botón de Listo -->

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="319dp"
        android:layout_height="178dp"
        app:layout_constraintBottom_toTopOf="@id/btn_Listo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.890" />

    <Button
        android:id="@+id/btn_Listo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_Listo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>
